#========================================================================#
#
# Set the decoration styles and window options
# Order is important!!!!
# If compatible styles are set for a single window in multiple Style
# commands, then the styles are ORed together. If conflicting styles
# are set, the last one specified is used.
#
# These commands should command before any menus or functions are defined,
# and before the internal pager is started.
#
TitleStyle	LeftJustified
TitleStyle	ActiveUp (TiledPixmap marbles/red5mra.xpm) \
		Inactive (TiledPixmap marbles/yel5mra.xpm) \
		-- flat
BorderStyle	Active (TiledPixmap marbles/red5mra.xpm) \
		InActive (TiledPixmap marbles/yel5mra.xpm) \
		-- HiddenHandles NoInset
ButtonStyle All	ActiveUp (TiledPixmap marbles/red5mra.xpm) \
		ActiveDown (TiledPixmap marbles/gree5mra.xpm) \
		Inactive (TiledPixmap marbles/yel5mra.xpm) \
		-- flat 

AddButtonStyle	1 MiniIcon
AddButtonStyle	2 Pixmap win95-close.xpm
AddButtonStyle	4 Pixmap win95-maximize.xpm
AddButtonStyle	6 Pixmap win95-minimize.xpm



Style "Fvwm*"		NoTitle, Sticky, WindowListSkip, CirculateSkip
Style "FvwmConsole"	Title, WindowListHit
Style "FvwmIdent"	StaysOnTop
Style "FvwmTalk"	Title, WindowListHit
Style "Fvwm Pager"	StaysOnTop, NoHandles
Style "FvwmBanner"	StaysOnTop
Style "FvwmButtons"	NoTitle, NoHandles, WindowListSkip

Style "oclock"		NoTitle, NoHandles, Sticky, WindowListSkip
Style "xbiff"		NoTitle,            Sticky, WindowListSkip
Style "*console*"	Sticky, StartIconic
Style "*logout"		NoTitle, NoHandles, WindowListSkip, BorderWidth 0
Style "*zwgc"		Sticky, StartIconic
Style "Conversation*"	Sticky, StartIconic
Style "AWTapp"		StartIconic
Style "xpilot"		Sticky
Style "krlogin"		Sticky, WindowListSkip, NoHandles, NoTitle
Style "noname*"		Handles, BorderWidth 4
Style "Dialog"		Title, Handles, BorderWidth 4
Style "Netscape"	Title, Handles, BorderWidth 4
Style "XMMS_*"		NoTitle, Sticky

# KDE stuff
Style "*[menu]*"	NoHandles, NoTitle, BorderWidth 2
Style "*[tools]*"	NoHandles, NoTitle, BorderWidth 2
