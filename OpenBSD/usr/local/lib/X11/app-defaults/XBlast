# Applications default file for XBlast, if installed in 
# /usr/local/hacks/lib/X11/app-defaults, it contents will override 
# internal xblast defaults.
#
# Please read the manpage for a detailed description of
# XBlast resources.
#

# game setup
XBlast.startingLevel: 0
XBlast.numberOfLives: 3
XBlast.numberOfVictories: 5
XBlast.random: off

# global setup (valid for all displays)
XBlast.frameRate:      20
XBlast.allowColorMode: true
XBlast.forceOverride:  false
XBlast.bellSound:      true
XBlast.fork:           true

# local setup (can be changed by local xresources)
XBlast.colorMode: true
XBlast.override: false

# fonts used in xblast
XBlast.largeFont:  -*-helvetica-bold-r-*-*-24-*-*-*-*-*-iso8859-*
XBlast.mediumFont: -*-helvetica-bold-r-*-*-18-*-*-*-*-*-iso8859-*
XBlast.smallFont:  -*-helvetica-bold-r-*-*-14-*-*-*-*-*-iso8859-*

# title background colors
XBlast.titleColor1:     Red
XBlast.titleColor2:     OrangeRed
# explosion colors
XBlast.explosionColor1: OrangeRed
XBlast.explosionColor2: LightYellow
XBlast.explosionColor3: White
# status bar colors
XBlast.StatusBar.background: LightSteelBlue
XBlast.StatusBar.foreground: Black
XBlast.StatusBar.ledColor:   SpringGreen
# text box colors
XBlast.TextBox.darkColor1:  Black
XBlast.TextBox.darkColor2:  MidnightBlue
XBlast.TextBox.lightColor1: Yellow
XBlast.TextBox.lightColor2: Gold

# keybindings for single player
XBlast.singlePlayer.pauseKey:       KP_Subtract P
XBlast.singlePlayer.upKey:          KP_8 KP_Up Up T
XBlast.singlePlayer.leftKey:        KP_4 KP_Left Left F
XBlast.singlePlayer.downKey:        KP_2 KP_Down Down V B
XBlast.singlePlayer.rightKey:       KP_6 KP_Right Right H
XBlast.singlePlayer.stopKey:        KP_5 KP_Begin Begin G
XBlast.singlePlayer.bombKey:        KP_0 KP_Insert Insert space
XBlast.singlePlayer.specialKey:     Return KP_Add Tab
XBlast.singlePlayer.abortKey:       KP_Multiply A
XBlast.singlePlayer.abortcancelKey: KP_Divide Z
# keybindings for right player
XBlast.rightPlayer.pauseKey:        KP_Subtract
XBlast.rightPlayer.upKey:           KP_8 KP_Up Up
XBlast.rightPlayer.leftKey:         KP_4 KP_Left Left
XBlast.rightPlayer.downKey:         KP_2 KP_Down Down
XBlast.rightPlayer.rightKey:        KP_6 KP_Right Right
XBlast.rightPlayer.stopKey:         KP_5 KP_Begin Begin
XBlast.rightPlayer.bombKey:         KP_0 KP_Insert Insert
XBlast.rightPlayer.specialKey:      Return KP_Add
XBlast.rightPlayer.abortKey:        KP_Multiply
XBlast.rightPlayer.abortcancelKey:  KP_Divide
# keybindings for left player
XBlast.leftPlayer.pauseKey:         P
XBlast.leftPlayer.upKey:            T
XBlast.leftPlayer.leftKey:          F
XBlast.leftPlayer.downKey:          V B
XBlast.leftPlayer.rightKey:         H
XBlast.leftPlayer.stopKey:          G
XBlast.leftPlayer.bombKey:          space
XBlast.leftPlayer.specialKey:       Tab
XBlast.leftPlayer.abortKey:         A
XBlast.leftPlayer.abortcancelKey:   Z

# default player names
XBlast.player1:	Olli
